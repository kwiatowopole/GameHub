@using GameHub.Helpers
@{
    ViewBag.Title = "Index";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    .center-screen {
        display: flex;
        justify-content: center;
        align-items: flex-start; /* przesunięcie do góry */
        height: 100vh;
        padding-top: 30vh; /* regulowane przesunięcie w pionie */
        background-color: #FFF0F3;
        font-family: 'Orbitron', sans-serif;
        user-select: none;
        text-align: center;
    }

    .logo-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .logo-row {
        display: flex;
        align-items: center;
        gap: 0.4em;
        color: #3F2E3E;
        transition: color 0.3s ease;
        font-size: 8vw; /* rozmiar dynamiczny */
    }

    .logo-wrapper:hover .logo-row {
        color: #FFD1DC;
    }

    .tooltip-text {
        font-size: 1.5vw;
        color: #3F2E3E;
        margin-top: 10px;
        letter-spacing: 1px;
    }
</style>

<div class="center-screen">
    <div class="logo-wrapper" title="Your game center!">
        <div class="logo-row">
            <i class="bi bi-cursor"></i>
            <span>Game Hub</span>
        </div>
        <div class="tooltip-text">Your game center!</div>
    </div>
</div>
<div class="text-center" style="margin-top: 0px;">
    <a href="/Games/Browse" class="btn btn-primary m-2">Games</a>
    <a href="/Scores/Results" class="btn btn-primary m-2">Scores</a>
</div>

