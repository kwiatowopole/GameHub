@using GameHub.Helpers
@{
    ViewBag.Title = "Index";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    .center-screen {
        display: flex;
        flex-direction: column; /* ułożenie w kolumnie */
        justify-content: flex-start; /* od góry */
        align-items: center;
        height: 100vh;
        padding-top: 30vh; /* zmniejszone przesunięcie w pionie */
        background-color: #FFF0F3;
        font-family: 'Orbitron', sans-serif;
        user-select: none;
        text-align: center;
        gap: 30px; /* odstęp między elementami */
    }

    .logo-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .logo-row {
        display: flex;
        align-items: center;
        gap: 0.4em;
        color: #3F2E3E;
        transition: color 0.3s ease;
        font-size: 8vw; /* rozmiar dynamiczny */
    }

    .logo-wrapper:hover .logo-row {
        color: #FFD1DC;
    }

    .tooltip-text {
        font-size: 1.5vw;
        color: #3F2E3E;
        margin-top: 10px;
        letter-spacing: 1px;
    }

    .button-group-main {
        display: flex;
        gap: 1rem;
    }
</style>

<div class="center-screen">
    <div class="logo-wrapper" title="Your game center!">
        <div class="logo-row">
            <i class="bi bi-cursor"></i>
            <span>Game Hub</span>
        </div>
        <div class="tooltip-text">Your game center!</div>
    </div>

    <div class="button-group-main">
        <a href="/Games/Browse" class="btn btn-primary m-2">Games</a>
        <a href="/Scores/Results" class="btn btn-primary m-2">Scores</a>
    </div>
</div>

@if (AuthHelper.IsAdmin(Session))
{
    <div class="admin-panel mt-4 text-center">
        <h3>Admin panel</h3>
        <div class="btn-group">
            <a href="@Url.Action("Index", "Users")" class="btn btn-outline-primary m-1">Users</a>
            <a href="@Url.Action("Index", "Games")" class="btn btn-outline-success m-1">Games</a>
            <a href="@Url.Action("Index", "Scores")" class="btn btn-outline-secondary m-1">Scores</a>
            <a href="@Url.Action("Index", "Categories")" class="btn btn-outline-secondary m-1">Categories</a>
        </div>
    </div>
}
