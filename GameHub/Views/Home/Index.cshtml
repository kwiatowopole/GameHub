@using GameHub.Helpers
@{
    ViewBag.Title = "Index";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        background-color: #FFF0F3;
        font-family: 'Orbitron', sans-serif;
        user-select: none;
        color: #3F2E3E;
    }

    .center-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        height: 100vh;
        padding-top: 30vh;
        text-align: center;
    }

    .logo-row {
        display: flex;
        align-items: center;
        gap: 0.35em;
        font-size: 8vw;
        color: #3F2E3E;
        transition: color 0.3s ease;
        user-select: none;
    }

    .center-container:hover .logo-row {
        color: #FFD1DC;
    }

    .tooltip-text {
        font-size: 1.5vw;
        color: #3F2E3E;
        margin-top: 10px;
        letter-spacing: 1px;
    }

    .btn-row {
        margin-top: 1rem;
        display: flex;
        justify-content: center;
        gap: 15px; 


    .btn-primary {
        min-width: 120px;
        font-size: 1.25rem;
        padding: 0.5rem 1.5rem;
    }
</style>

<div class="center-container">
    <div class="logo-wrapper" title="Your game center!">
        <div class="logo-row">
            <i class="bi bi-cursor"></i>
            <span>Game Hub</span>
        </div>
        <div class="tooltip-text">Your game center!</div>
    </div>

    <div class="btn-row">
        <a href="/Games/Browse" class="btn btn-primary">Games</a>
        <a href="/Scores/Results" class="btn btn-primary">Scores</a>
    </div>
</div>

@if (AuthHelper.IsAdmin(Session))
{
    <div class="admin-panel mt-4 text-center">
        <h3>Admin panel</h3>
        <div class="btn-group">
            <a href="@Url.Action("Index", "Users")" class="btn btn-outline-primary m-1">Users</a>
            <a href="@Url.Action("Index", "Games")" class="btn btn-outline-success m-1">Games</a>
            <a href="@Url.Action("Index", "Scores")" class="btn btn-outline-secondary m-1">Scores</a>
            <a href="@Url.Action("Index", "Categories")" class="btn btn-outline-secondary m-1">Categories</a>
        </div>
    </div>
}
