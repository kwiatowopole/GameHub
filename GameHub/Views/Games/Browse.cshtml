@model IEnumerable<GameHub.Helpers.ViewModelGameCat>
@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .category-title {
        font-size: 2rem; /* większy font */
        font-weight: 700; /* pogrubienie */
        text-transform: uppercase; /* kapitaliki */
        color: #8E6E95; /* wyróżniający różowy kolor */
        margin-top: 40px;
        margin-bottom: 16px;
        border-bottom: 3px solid #3F2E3E; /* podkreślenie linią */
        padding-bottom: 8px;
        letter-spacing: 1.5px; /* większy odstęp między literami */
    }

    .games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        margin-top: 32px;
    }

    .game-tile {
        display: flex;
        flex-direction: column;
        align-items: center;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
        text-decoration: none;
        color: #3F2E3E;
        transition: transform 0.15s, box-shadow 0.15s;
        padding: 18px 16px;
        cursor: pointer;
        height: 100%;
    }

        .game-tile:hover {
            transform: translateY(-6px) scale(1.03);
            box-shadow: 0 8px 32px rgba(63, 46, 62, 0.18);
            background: #FFD1DC;
        }

    .game-thumbnail {
        width: 100%;
        height: 240px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 16px;
        background: #eee;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
    }

    .game-title {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 8px;
        text-align: center;
    }

    .game-desc {
        font-size: 1.05rem;
        text-align: center;
        color: #5a4a5a;
        flex: 1;
    }
</style>

<h2>Game List</h2>

@foreach (var group in Model)
{
    <h3 class="category-title">@group.Category.Name</h3>
    <div class="games-grid">
        @foreach (var gameVm in group.Games)
        {
            <a href="@Url.Action(gameVm.Game.name, "Games")" class="game-tile">
                <div class="game-thumbnail">
                    @if (!string.IsNullOrEmpty(gameVm.GifUrl))
                    {
                        <img src="@gameVm.GifUrl" alt="gif" style="width:100%;height:100%;object-fit:cover;border-radius:12px;" />
                    }
                    else
                    {
                        <span class="bi bi-controller"></span>
                    }
                </div>
                <div class="game-title">@gameVm.Game.name</div>
                <div class="game-desc">@gameVm.Description</div>
            </a>
        }
    </div>
}
