@model IEnumerable<GameHub.Helpers.ViewModelGameCat>
@{
    ViewBag.Title = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); 
        gap: 20px;
        margin-top: 32px;
    }

    .game-tile {
        flex-direction: column;
        align-items: center;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.12); 
        text-decoration: none;
        color: #3F2E3E;
        transition: transform 0.15s ease, box-shadow 0.15s ease;
        padding: 14px 12px;
        cursor: pointer;
        height: 100%;
        max-width: 300px;
        margin: 0 auto; 
    }

        .game-tile:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 0 6px 20px rgba(63, 46, 62, 0.25);
            background: #FFE6F0;
        }

    .game-thumbnail {
        width: 270px;
        height: 230px; 
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 12px;
        background: #eee;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
    }

    .game-title {
        font-size: 1.3rem;
        margin-bottom: 6px;
    }

    .game-desc {
        font-size: 1rem;
        color: #6b5b6e;
    }
</style>

<h2>Game List</h2>

@foreach (var group in Model)
{
    <h3 class="category-title">@group.Category.Name</h3>
    <div class="games-grid">
        @foreach (var gameVm in group.Games)
        {
            <a href="@Url.Action(gameVm.Game.name, "Games")" class="game-tile">
                <div class="game-thumbnail">
                    @if (!string.IsNullOrEmpty(gameVm.GifUrl))
                    {
                        <img src="@gameVm.GifUrl" alt="gif" style="width:100%;height:100%;object-fit:cover;border-radius:12px;" />
                    }
                    else
                    {
                        <span class="bi bi-controller"></span>
                    }
                </div>
                <div class="game-title">@gameVm.Game.name</div>
                <div class="game-desc">@gameVm.Description</div>
            </a>
        }
    </div>
}
