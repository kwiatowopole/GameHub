
@{
    ViewBag.Title = "Logowanie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Users", FormMethod.Post))
{
    <div><label>Login:</label> <input type="text" name="username" required /></div>
    <div><label>Hasło:</label> <input type="password" name="password" required /></div>
    <button type="submit">Zaloguj</button>
    <div class="mt-3 text-center">
        <p>Nie masz konta? <a href="/Users/Register" class="btn btn-link">Zarejestruj się</a></p>
    </div>
}

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}