<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - moja aplikacja platformy ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            background-color: #BBE09F;
            color: #396146;
        }

        h1, h2, h3, h4, h5, h6 {
            color: #75545F;
        }

        a, .nav-link {
            color: #E09FC1 !important;
        }

            a:hover, .nav-link:hover {
                color: #9FE0B5 !important;
            }

        footer {
            color: #75545F;
        }

        .navbar {
            background-color: #396146 !important;
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: #E09FC1 !important;
        }

            .navbar-brand:hover {
                color: #9FE0B5 !important;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">

            @Html.ActionLink("Nazwa aplikacji", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Przełącz nawigację" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Strona główna", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Informacje", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    @if (Session["userId"] != null)
                    {
                        <span class="me-2">👤 @Session["username"]</span>
                        <a href="/Users/Logout" class="btn btn-sm btn-outline-danger">Wyloguj</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Users", new { returnUrl = Request.RawUrl })">Zaloguj się</a>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Moja aplikacja ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>     